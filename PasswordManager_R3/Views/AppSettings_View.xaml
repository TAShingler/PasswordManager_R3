                                              Grid.Column="1"
                                              IsEnabled="{Binding ElementName=checkBoxAllowAutoBackups,
                                                                  Path=IsChecked}"
                                              Command="{Binding DecrementAutoBackupCountCommand}">
                                    <Canvas Width="8"
                                            Height="4">
                                        <Path Fill="Black"
