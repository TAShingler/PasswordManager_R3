                                       Grid.Row="1"
                                       Height="24"
                                       Padding="0"
                                       Margin="0 2"
                                       VerticalContentAlignment="Center"
                                       HorizontalContentAlignment="Left"
                                       Content="Last Modified:"
                                       Foreground="Gainsboro"/>
                                <TextBox Grid.Column="2"
                                         Grid.Row="1"
                                         Height="24"
                                         IsReadOnly="True"
                                         Margin="0 2"
                                         VerticalContentAlignment="Center"
                                         HorizontalContentAlignment="Left"
                                         Foreground="Gainsboro"
                                         Style="{StaticResource InputTextBoxStyle}"/>

