                               Foreground="Gainsboro"
                               Content="Length:"
                               VerticalContentAlignment="Center"
                               Margin="0"
                               Padding="0 0 8 0"/>
                        <Slider Grid.Column="1" />
                        <Border Grid.Column="2" Width="75">
                            <Grid>
                                <Grid.RowDefinitions>
                                    <RowDefinition />
                                    <RowDefinition />
                                </Grid.RowDefinitions>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="24" />
                                    <ColumnDefinition Width="18" />
                                </Grid.ColumnDefinitions>

                                <TextBox Grid.Column="0"
                                         Grid.ColumnSpan="1"
                                         Grid.Row="0"
                                         Grid.RowSpan="2"
                                         Foreground="Gainsboro"
                                         Background="#333"
                                         CaretBrush="Gainsboro" />
                                <RepeatButton Grid.Column="1"
                                              Grid.ColumnSpan="1"
                                              Grid.Row="0"
                                              Grid.RowSpan="1">
                                    <Path Fill="Black"
                                          Data="M 0,5 L 7,5 L 3.5,0 Z" />
                                </RepeatButton>
                                <RepeatButton Grid.Column="1"
                                              Grid.ColumnSpan="1"
                                              Grid.Row="1"
                                              Grid.RowSpan="1">
