                              Content="Uppercase Letters"/>
                    <CheckBox Grid.Column="2"
                              Grid.Row="2"
                              Foreground="Gainsboro"
                              Content="Lowercase Letters"/>

                    <!--//  Row 3  //-->
                    <CheckBox Grid.Column="0"
