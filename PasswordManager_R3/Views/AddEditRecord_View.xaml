                                <Label Grid.Column="1"
                                       Grid.Row="0"
                                       Height="24"
                                       Padding="0"
                                       Margin="0 0 0 2"
                                       VerticalContentAlignment="Center"
                                       HorizontalContentAlignment="Left"
                                       Content="Created:"
                                       Foreground="Gainsboro" />
